select
M.[MaterialID],
M.[International_Article_Number] as "Material EAN/UPC (M)",
M.[MaterialCategory] as "Material Category",
M.[Material_Group_Cd] as "Material Group (M)",
M.[Material_Group_Desc] as "Material Group Desc (M)",
M.[Material_Type] as "Material Type",
M.[T134T_MaterialTypeDesc] as "Material Type Desc",
M.[NAICS_Code] as "Material NAICS (M)",
M.[NAICSCodeDesc] as "Material NAICS Desc (M)",
M.[Material_Description_CHN] as "Material Desc"

from  [cur_mdm].[DimMaterial] M
left join [cur_mdm].[DimMaterialSalesOrg] mso
on mso.[Material_ID] = M.[MaterialID]

WHERE mso.[Sales_Organization] in ('C510','C550')
